@{
    ViewData["Title"] = "Lista Ingredienti";
}

@model List<Ingrediente>


<div>
    <div>
        <a class="btn btn-primary " href="@Url.Action("Create","Pizza")">Aggiungi Ingrediente</a>
    </div>

    <div class="d-flex flex-wrap">
        @if (Model.Count() > 0)
        {
            @foreach(Ingrediente ing in Model)
            {
                <div class="card border-primary col-3 m-4 text-center"> 
                    <span class="card-title">@ing.Name</span>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <strong class="text-center ">Non ci sono pizze da visualizzare</strong>        
            </div>
        }
    </div>
</div>

